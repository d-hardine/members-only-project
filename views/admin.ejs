    <link rel="stylesheet" href="/styles.css">
    <title>Become an Administrator</title>
</head>
<body>
    <%- include("partials/header.ejs") %>
    <main>
        <form action="/admin" method="POST" class="form-container">
            <h1>Admin Passcode</h1>
            <label for="passcode">Passcode</label>
            <input id="passcode" name="passcode" placeholder="passcode" type="password" required/>
            <button type="submit">Become Administrator</button>
        </form>
        <%- include("partials/errors.ejs") %>
    </main>
    <%- include("partials/footer.ejs") %>
</body>
</html>